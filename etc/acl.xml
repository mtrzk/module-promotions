<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Mtrzk_Promotions::promotions_all" title="Promotions Module" translate="title"
                          sortOrder="200">
                    <resource id="Mtrzk_Promotions::promotions" title="Promotions" sortOrder="10">
                        <resource id="Mtrzk_Promotions::promotions_view" title="View Promotions" sortOrder="10"/>
                        <resource id="Mtrzk_Promotions::promotions_save" title="Save Promotions" sortOrder="20"/>
                        <resource id="Mtrzk_Promotions::promotions_delete" title="Delete Promotions" sortOrder="30"/>
                    </resource>
                    <resource id="Mtrzk_Promotions::promotion_groups" title="Promotion Groups" sortOrder="20">
                        <resource id="Mtrzk_Promotions::promotion_groups_view" title="View Promotion Groups" sortOrder="10"/>
                        <resource id="Mtrzk_Promotions::promotion_groups_save" title="Save Promotion Groups" sortOrder="20"/>
                        <resource id="Mtrzk_Promotions::promotion_groups_delete" title="Delete Promotion Groups" sortOrder="30"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
